<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DetailsPitchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Make your PITCH"
            android:textStyle="bold"
            android:textSize="32dp"
            android:gravity="center"
            android:layout_marginTop="42dp"
            android:layout_marginBottom="32dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="Name*"
            android:layout_marginLeft="16dp"
            android:textSize="18dp"
            />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edittext_border"
            android:inputType="text"
            android:padding="8dp"
            android:textSize="20sp"
            android:layout_marginHorizontal="24dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="Domain*"
            android:layout_marginLeft="16dp"
            android:textSize="18dp"

            />

        <EditText
            android:id="@+id/domain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edittext_border"
            android:inputType="text"
            android:padding="8dp"
            android:textSize="20sp"
            android:layout_marginHorizontal="24dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="Pitch using a ppt/pdf/doc*"
            android:layout_marginLeft="16dp"
            android:textSize="18dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/upload_btn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/white"
            android:shadowColor="@color/black"
            android:text="Upload "
            android:textAllCaps="false"
            android:textColor="@color/black"

            app:icon="@drawable/ic_upload2"
            app:iconGravity="textStart"
            app:iconTint="@color/primary_theme"
            app:strokeColor="@color/black" />

<!--        <EditText-->
<!--            android:id="@+id/username"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginBottom="12dp"-->
<!--            android:background="@drawable/edittext_border"-->
<!--            android:inputType="text"-->
<!--            android:padding="8dp"-->
<!--            android:textSize="20sp"-->
<!--            android:layout_marginHorizontal="16dp">-->



<!--        </EditText>-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="Description*"
            android:layout_marginLeft="16dp"
            android:textSize="18dp"
            />

        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edittext_border"
            android:inputType="text"
            android:padding="8dp"
            android:textSize="20sp"
            android:layout_marginHorizontal="24dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="Expectation and stake:"
            android:layout_marginLeft="16dp"
            android:textSize="18dp"
            />

        <EditText
            android:id="@+id/expectation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edittext_border"
            android:inputType="text"
            android:padding="8dp"
            android:textSize="20sp"
            android:layout_marginHorizontal="24dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:background="@drawable/rounded_button"
            android:layout_gravity="center"
            />


    </LinearLayout>

</ScrollView>