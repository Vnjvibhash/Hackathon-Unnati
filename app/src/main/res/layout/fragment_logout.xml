<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.LogoutFragment">

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_margin="8dp"
     android:orientation="vertical"
     android:layout_gravity="center"
     android:background="@color/primary_theme_lite">
     <TextView
         android:layout_marginTop="12dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Are you sure want to logout ?"
         android:gravity="center"
         android:textColor="@color/black"
         android:textSize="20dp"
         android:textStyle="bold"/>
     <LinearLayout
         android:layout_width="match_parent"
         android:gravity="center"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
         <Button
             android:id="@+id/logout_yes"
             android:layout_width="wrap_content"
             android:padding="8dp"
             android:backgroundTint="@color/secondary_theme"
             android:layout_margin="8dp"
             android:layout_height="wrap_content"
             android:text="Yes"/>
         <Button
             android:id="@+id/logout_no"
             android:layout_width="wrap_content"
             android:padding="8dp"
             android:layout_margin="8dp"
             android:layout_height="wrap_content"
             android:backgroundTint="@color/red"
             android:text="No"/>
     </LinearLayout>
 </LinearLayout>

</FrameLayout>