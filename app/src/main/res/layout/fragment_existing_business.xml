<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ExistingBusinessFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/investor_kam"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pitch details"
                android:textStyle="bold"
                android:textSize="24dp"
                android:gravity="center"
                android:layout_marginTop="42dp"
                android:layout_marginBottom="32dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="Key Partners:"
                android:layout_marginLeft="16dp"
                android:textSize="18dp"
                />

            <TextView
                android:id="@+id/name_i1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_border"
                android:text="List the key partnerships your business leverages or relies upon for success. Include the resources or value your business gets from these partnerships."
                android:padding="8dp"
                android:textSize="20sp"
                android:layout_marginHorizontal="24dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="Key Activities:"
                android:layout_marginLeft="16dp"
                android:textSize="18dp"

                />

            <TextView
                android:id="@+id/domain_i1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_border"
                android:text="Leverages or relies upon for success. Include the resources or value your business gets from these partnerships."
                android:padding="8dp"
                android:textSize="20sp"
                android:layout_marginHorizontal="24dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="Key Resources:"
                android:layout_marginLeft="16dp"
                android:textSize="18dp"
                />

            <TextView
                android:id="@+id/description_i1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_border"
                android:text="List the key resources your business relies upon or uses in order to operate and provide services."
                android:padding="8dp"
                android:textSize="20sp"
                android:layout_marginHorizontal="24dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="Key Propositions:"
                android:layout_marginLeft="16dp"
                android:textSize="18dp"
                />

            <TextView
                android:id="@+id/expectation_i1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_border"
                android:text="Upon or uses in order to operate and provide services."
                android:padding="8dp"
                android:textSize="20sp"
                android:layout_marginHorizontal="24dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="Key Partners:"
                android:layout_marginLeft="16dp"
                android:textSize="18dp"
                />

            <TextView
                android:id="@+id/name_i"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_border"
                android:text="List the key partnerships your business leverages or relies upon for success. Include the resources or value your business gets from these partnerships."
                android:padding="8dp"
                android:textSize="20sp"
                android:layout_marginHorizontal="24dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="Key Activities:"
                android:layout_marginLeft="16dp"
                android:textSize="18dp"

                />

            <TextView
                android:id="@+id/domain_i"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_border"
                android:text="Leverages or relies upon for success. Include the resources or value your business gets from these partnerships."
                android:padding="8dp"
                android:textSize="20sp"
                android:layout_marginHorizontal="24dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="Key Resources:"
                android:layout_marginLeft="16dp"
                android:textSize="18dp"
                />

            <TextView
                android:id="@+id/description_1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_border"
                android:text="List the key resources your business relies upon or uses in order to operate and provide services."
                android:padding="8dp"
                android:textSize="20sp"
                android:layout_marginHorizontal="24dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="Key Propositions:"
                android:layout_marginLeft="16dp"
                android:textSize="18dp"
                />

            <TextView
                android:id="@+id/expectation_i"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_border"
                android:text="Upon or uses in order to operate and provide services."
                android:padding="8dp"
                android:textSize="20sp"
                android:layout_marginHorizontal="24dp"/>

            <Button
                android:id="@+id/chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat here"
                android:paddingHorizontal="12dp"
                android:textAllCaps="false"
                android:background="@drawable/rounded_button"
                android:layout_gravity="center"
                />


        </LinearLayout>
        
    </LinearLayout>



</ScrollView>