<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.BusinessFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@color/primary_theme_lite">
        <TextView
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select your business type"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/logout_new"
                android:layout_width="wrap_content"
                android:padding="8dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:layout_margin="8dp"
                android:layout_height="wrap_content"
                android:text="New Business Idea"/>
            <Button
                android:id="@+id/logout_ex"
                android:layout_width="wrap_content"
                android:padding="8dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:layout_margin="8dp"
                android:layout_height="wrap_content"
                android:text="Existing Business Idea"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
